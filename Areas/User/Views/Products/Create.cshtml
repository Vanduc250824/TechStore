@model TechStore.Models.Product
@{
    Layout = "_LayoutManager";
}

<div class="container mt-4 py-3">
    <h2 class="text-center text-primary mb-4">Create Product</h2>

    @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
    {
        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required", placeholder = "Nhập tên sản phẩm" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.CategoryID, "Chọn danh mục", new { @class = "form-label fw-bold" })
                    @Html.DropDownListFor(model => model.CategoryID, ViewData["CategoryID"] as SelectList, "-- Chọn danh mục --", new { @class = "form-select", required = "required" })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.OriginalPrice, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.OriginalPrice, new { @class = "form-control", type = "number", step = "0.01", required = "required", placeholder = "Giá gốc" })
                </div>

                <div class="form-group mb-3">
                    @Html.HiddenFor(m => m.DiscountedPrice)
                </div>
                
                <div class="mb-3">
                    @Html.LabelFor(m => m.StockQuantity, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(m => m.StockQuantity, new { @class = "form-control", type = "number", required = "required", placeholder = "Số lượng" })
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <div class="mb-3">
                    @Html.LabelFor(m => m.ImageFile, new { @class = "form-label fw-bold" })
                    <input asp-for="ImageFile" type="file" class="form-control" required />
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", id = "DescriptionID", placeholder = "Nhập mô tả sản phẩm", rows = "6" })
                </div>
            </div>
        </div>

        <div class="text-center mt-3">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> Lưu sản phẩm
            </button>
        </div>
    }
    <partial name="_CKEditor" />
</div>

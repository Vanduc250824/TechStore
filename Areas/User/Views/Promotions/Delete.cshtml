@model TechStore.Models.Promotion

@{
    ViewData["Title"] = "Delete Promotion";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Delete Promotion</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this promotion?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Code</dt>
                        <dd class="col-sm-8">@Model.Code</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Html.Raw(Model.Description)</dd>

                        <dt class="col-sm-4">Discount</dt>
                        <dd class="col-sm-8">
                            @if (Model.DiscountType == "Percentage")
                            {
                                <span>@Model.DiscountValue%</span>
                            }
                            else
                            {
                                <span>@Model.DiscountValue.ToString("N0") â‚«</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("g")</dd>

                        <dt class="col-sm-4">End Date</dt>
                        <dd class="col-sm-8">@Model.EndDate.ToString("g")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="text-center">
                        <input type="hidden" asp-for="PromotionID" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

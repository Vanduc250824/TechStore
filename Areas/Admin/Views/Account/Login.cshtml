@model TechStore.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập hệ thống POS";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(45deg, #001F3F, #003366);
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Roboto', sans-serif;
        }

        .login-container {
            background: #1E1E1E;
            border-radius: 10px;
            width: 100%;
            max-width: 1000px;
            min-height: 600px;
            display: flex;
            padding: 0;
            overflow: hidden;
        }

        .login-image {
            flex: 1;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-image img {
            width: 100%;
            height: auto;
            object-fit: contain;
        }

        .login-form {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 60px;
        }

        .login-title {
            color: white;
            font-size: 32px;
            font-weight: 700;
            text-align: center;
            margin-bottom: 40px;
        }

        .input-group {
            background: #2A2A2A;
            border-radius: 5px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .input-group i {
            color: #6C757D;
            font-size: 20px;
            padding: 0 15px;
        }

        .form-control {
            background: transparent;
            border: none;
            color: white;
            padding: 15px 5px;
            flex: 1;
            font-size: 16px;
        }

        .form-control:focus {
            outline: none;
            box-shadow: none;
            background: transparent;
            color: white;
        }

        .form-control::placeholder {
            color: #6C757D;
        }

        .btn-login {
            background: #DAA520;
            color: white;
            padding: 15px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 600;
            width: 100%;
            cursor: pointer;
            margin-top: 10px;
        }

        .btn-login:hover {
            background: #B8860B;
        }

        .forgot-password {
            text-align: center;
            margin-top: 20px;
        }

        .forgot-password a {
            color: #6C757D;
            text-decoration: none;
            font-size: 14px;
        }

        .forgot-password a:hover {
            color: #DAA520;
        }

        .copyright {
            position: fixed;
            bottom: 20px;
            left: 0;
            right: 0;
            text-align: center;
            color: white;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-image">
            <img src="~/images/login-illustration.jpg" alt="Login illustration" />
        </div>
        <div class="login-form">
            <h1 class="login-title">ĐĂNG NHẬP HỆ THỐNG POS</h1>

            @using (Html.BeginForm("Login", "Account", new { area = "Admin" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="input-group">
                    <i class="fa-solid fa-user"></i>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "abc123@gmail.com", type = "email", required = "required" })
                </div>

                <div class="input-group">
                    <i class="fa-solid fa-lock"></i>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "••••••••", required = "required" })
                </div>

                <button type="submit" class="btn-login">Đăng nhập</button>

                <div class="forgot-password">
                    <a href="#">Bạn quên mật khẩu?</a>
                </div>
            }
        </div>
    </div>

    <div class="copyright">
        Phần mềm quản lý bán hàng © 2025 Code bởi Văn Đức
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>

@model TechStore.Models.Promotion

@{
    ViewData["Title"] = "Xóa Khuyến Mãi";
    Layout = "_NavbarManager";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 rounded border-danger">
        <h2 class="text-center text-danger fw-bold">Delete PROMOTION</h2>
        <p class="text-center text-danger fw-bold">Are you sure delete this promotion? </p>

        <ul class="list-group mb-4">
            <li class="list-group-item"><strong>ID:</strong> @Model.PromotionID</li>
            <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
            <li class="list-group-item"><strong>Discount:</strong> @Model.DiscountPercent%</li>
            <li class="list-group-item"><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</li>
            <li class="list-group-item"><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</li>
            <li class="list-group-item"><strong>Description:</strong> @Html.Raw(Model.Description)</li>
        </ul>

        <div class="text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="PromotionID" />
                <button type="submit" class="btn btn-danger btn-lg px-4">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

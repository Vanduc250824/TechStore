@model TechStore.Models.Promotion

@{
    ViewData["Title"] = "Chỉnh Sửa Khuyến Mãi";
    Layout = "_NavbarManager";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 rounded">
        <h2 class="text-center text-primary fw-bold mb-4">EDIT PROMOTION</h2>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="PromotionID" />

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Name</label>
                        <input asp-for="Name" class="form-control border-primary shadow-sm" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DiscountPercent" class="form-label fw-bold">Discount (%)</label>
                        <input asp-for="DiscountPercent" class="form-control border-primary shadow-sm" type="number" step="0.01" required />
                        <span asp-validation-for="DiscountPercent" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="StartDate" class="form-label fw-bold">Start Date</label>
                        <input asp-for="StartDate" class="form-control border-primary shadow-sm" type="date" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EndDate" class="form-label fw-bold">End Date</label>
                        <input asp-for="EndDate" class="form-control border-primary shadow-sm" type="date" required />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold">Description</label>
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control border-primary shadow-sm", id = "DescriptionID", placeholder = "Enter detail description" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg px-4">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary btn-lg px-4">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>

            @Html.Partial("_CKEditor")
        </form>
    </div>
</div>

@model TechStore.Models.Product

@{
    Layout = "_NavbarManager";
}

<div class="container mt-4 py-4">
    <h2 class="text-center text-primary mb-4">DETAILS PRODUCT</h2>

    <div class="card">
        <div class="row g-0">
            <div class="col-md-4 text-center p-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="Hình ảnh sản phẩm">
                }
                else
                {
                    <span class="text-muted">none</span>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title text-primary fw-bold">@Model.Name</h3>
                    <hr>

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">Category:</dt>
                        <dd class="col-sm-8">@Model.Category.Name</dd>
                        <dt class="col-sm-4 fw-semibold">Product Type:</dt>
                        <dd class="col-sm-8">@Model.ProductType</dd>

                        <dt class="col-sm-4 fw-semibold">Price:</dt>
                        <dd class="col-sm-8 text-success fw-bold fs-5">$ @Model.OriginalPrice.ToString("N0")</dd>
                        <dt class="col-sm-4 fw-semibold">Price:</dt>
                        <dd class="col-sm-8 text-success fw-bold fs-5">$ @Model.DiscountedPrice.ToString("N0")</dd>

                        <dt class="col-sm-4 fw-semibold">Stock:</dt>
                        <dd class="col-sm-8">@Model.StockQuantity</dd>

                        <dt class="col-sm-4 fw-semibold">Description:</dt>
                        <dd class="col-sm-8 bg-light p-2 rounded">@Html.Raw(Model.Description)</dd>
                    </dl>

                    <div class="d-flex justify-content-end mt-3">
                        <a href="@Url.Action("Index", "Products")" class="btn btn-secondary me-2">
                            <i class="fa fa-arrow-left"></i> Back
                        </a>
                        <a href="@Url.Action("Edit", "Products", new { id = Model.ProductID })" class="btn btn-warning">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

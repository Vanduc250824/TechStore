@model TechStore.Models.Product

@{
    Layout = "_NavbarManager";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h2>CONFIRM DELETE PRODUCT</h2>
        </div>
        <div class="card-body">
            <p class="text-center fs-5">Are you sure delete this product?</p>
            <hr />
            <div class="row">
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded shadow" style="max-width: 150px; object-fit: cover;" />
                    }
                    else
                    {
                        <p class="text-muted">None</p>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 fw-bold">Category:</dt>
                        <dd class="col-sm-8">@Model.Category.Name</dd>
                        <dt class="col-sm-4 fw-bold">OriginalPrice:</dt>
                        <dd class="col-sm-8 text-danger fw-bold">$ @Model.OriginalPrice.ToString("N0")</dd>
                        <dt class="col-sm-4 fw-bold">DiscountedPrice:</dt>
                        <dd class="col-sm-8 text-danger fw-bold">$ @Model.DiscountedPrice.ToString("N0")</dd>
                        <dt class="col-sm-4 fw-bold">Stock:</dt>
                        <dd class="col-sm-8">@Model.StockQuantity</dd>
                    </dl>
                </div>
            </div>
            <hr />
            <div class="d-flex justify-content-center gap-3">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ProductID" />
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        </div>
    </div>
</div>

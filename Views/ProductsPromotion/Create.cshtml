@model TechStore.Models.ProductsPromotion
@{
    ViewData["Title"] = "Thêm Sản phẩm Khuyến mãi";
    Layout = "_NavbarManager";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>Thêm Sản phẩm vào Khuyến mãi
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="ProductID" class="form-label fw-semibold">Sản phẩm</label>
                    <select asp-for="ProductID" class="form-select" asp-items="ViewBag.ProductID">
                        <option value="">-- Chọn Sản phẩm --</option>
                    </select>
                    <span asp-validation-for="ProductID" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PromotionID" class="form-label fw-semibold">Khuyến mãi</label>
                    <select asp-for="PromotionID" class="form-select" asp-items="ViewBag.PromotionID">
                        <option value="">-- Chọn Khuyến mãi --</option>
                    </select>
                    <span asp-validation-for="PromotionID" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay Lại
                    </a>
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="bi bi-check-circle"></i> Thêm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

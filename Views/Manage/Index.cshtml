@model ApplicationUser

@{
    ViewData["Title"] = "My Account";
}

<h2 class="mb-4 text-center text-primary py-3">My Account</h2>

<div class="card shadow-lg rounded-4 p-4 my-4">
    <div class="d-flex align-items-center mb-3">
        <img src="@Model.ProfilePicture" alt="Avatar" class="rounded-circle me-3" style="width: 120px; height: 120px; object-fit: cover;">
        <div>
            <h4 class="mb-0">@Model.FullName</h4>
            <p class="text-muted">@Model.Email</p>
            <p><strong>Username:</strong> @Model.UserName</p>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-6">
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        </div>
        <div class="col-md-6">
            <p><strong>Address:</strong> @Model.Address</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Edit", "Manage", new { id = Model.Id })" class="btn btn-outline-primary px-4 py-2">Edit Profile</a>
    </div>
</div>

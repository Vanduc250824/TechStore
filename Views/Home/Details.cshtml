@model TechStore.Models.Product

@{
    Layout = "_LayoutUser";
}

<div class="container mt-5 py-4">
    <h2 class="text-center text-primary mb-4">Product Details</h2>

    <div class="card shadow-lg">
        <div class="row g-0">
            <div class="col-md-4 text-center p-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="Product Image">
                }
                else
                {
                    <span class="text-muted">No image available</span>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title text-primary fw-bold">@Model.Name</h3>
                    <hr>

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">Category:</dt>
                        <dd class="col-sm-8">@Model.Category.Name</dd>
                        
                        <dt class="col-sm-4 fw-semibold">Original Price:</dt>
                        <dd class="col-sm-8 text-muted text-decoration-line-through">@Model.OriginalPrice.ToString("N0")</dd>

                        <dt class="col-sm-4 fw-semibold">Discounted Price:</dt>
                        <dd class="col-sm-8 text-success fw-bold fs-5">$ @Model.DiscountedPrice.ToString("N0")</dd>

                        <dt class="col-sm-4 fw-semibold">Stock Quantity:</dt>
                        <dd class="col-sm-8">@Model.StockQuantity</dd>

                        <dt class="col-sm-4 fw-semibold">Description:</dt>
                        <dd class="col-sm-8 bg-light p-3 rounded">@Html.Raw(Model.Description)</dd>
                    </dl>

                    <div class="d-flex justify-content-end mt-4">
                        <a href="@Url.Action("Index", "Home", new { id = Model.ProductID })" class="btn btn-warning">
                            <i class="fa fa-edit"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 1200px;
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-body {
        font-size: 1rem;
        color: #333;
    }

    .card-title {
        font-size: 1.75rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .row dl dt {
        font-weight: 600;
        color: #555;
    }

    .row dl dd {
        margin-bottom: 10px;
        color: #444;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .btn {
        padding: 10px 15px;
        font-size: 1rem;
        border-radius: 5px;
        transition: background-color 0.3s ease-in-out;
    }

    .btn-secondary:hover {
        background-color: #6c757d;
    }

    .btn-warning:hover {
        background-color: #ffc107;
    }

    .fw-semibold {
        font-weight: 600;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .text-success {
        color: #28a745 !important;
    }
</style>

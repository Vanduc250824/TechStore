<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Dashboard</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css"
        asp-append-version="true" />
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <!-- Custom CSS -->
    <style>
        .main-header {
            border-bottom: 1px solid #dee2e6;
            box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
        }
        .main-header .nav-link {
            padding: .5rem 1rem;
            color: #343a40 !important;
            transition: all .3s ease;
        }
        .main-header .nav-link:hover {
            color: #007bff !important;
            text-decoration: none;
        }
        .brand-link {
            padding: 1rem;
        }
        .brand-link .brand-image {
            margin-left: .2rem;
            margin-right: .5rem;
            margin-top: -3px;
            max-height: 33px;
        }
        .sidebar-dark-primary {
            background-color: #343a40;
        }
        .sidebar-dark-primary .nav-sidebar .nav-item .nav-link {
            color: #c2c7d0;
            padding: 1rem;
        }
        .sidebar-dark-primary .nav-sidebar .nav-item .nav-link:hover {
            color: #fff;
            background-color: rgba(255,255,255,.1);
        }
        .nav-sidebar .nav-link i {
            margin-right: .5rem;
        }
        .content-wrapper {
            background-color: #f4f6f9;
        }
        .content-header h1 {
            font-size: 1.8rem;
            margin: 0;
            font-weight: 400;
        }
        .main-footer {
            padding: 1rem;
            color: #869099;
            border-top: 1px solid #dee2e6;
        }
        .logout-btn {
            background: none;
            border: none;
            color: #343a40;
            transition: all .3s ease;
        }
        .logout-btn:hover {
            color: #dc3545;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Admin")" class="px-4">Home</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i> Tho√°t
                    </button>
                </form>
            </ul>
        </nav>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index", "Admin")" class="brand-link">
                <img src="~/Images/logo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Admin</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <!-- Optional: User info can go here -->

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu"
                        data-accordion="false">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Account")" class="nav-link">
                                <i class="nav-icon fas fa-user-circle"></i>
                                <p>Account</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Products")" class="nav-link">
                                <i class="nav-icon fas fa-box-open"></i>
                                <p>Products</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Promotions")" class="nav-link">
                                <i class="nav-icon fas fa-percentage"></i>
                                <p>Promotions</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0">@ViewBag.Title</h1>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.content-header -->

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->

        <!-- Footer -->
        <footer class="main-footer">
            <div class="float-right d-none d-sm-inline">
                <b>Version</b> 3.2.0
            </div>
            <strong>Copyright &copy; 2025 <a href="@Url.Action("Index", "Home")">Admin</a>.</strong> All rights
            reserved.
        </footer>
    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js" asp-append-version="true"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>

</html>
